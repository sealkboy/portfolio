# 2) Realizar un CRUD, sobre la base de datos del ejercicio propuesto para cada alumno.

mydb = mysql.connector.connect(
host="localhost",
user="root",
passwd="---",
database="ventas"
)
cursor=mydb.cursor()
print ("¡ATENCIÓN! Debe teclear alguna de la siguientes iniciales: ") 
print ("- C para Create")
print ("- R para Read")
print ("- U para Update")
print ("- D para Delete")
CRUD = input ("¿Qué desea hacer? ")
if CRUD == "C": 
    tabla = input("¿A qué tabla quiere añadir datos? (teclee: cliente / comercial / pedido) ")
    if tabla=="cliente": 
        num_cliente = int(input(" >>>¿Cuántos clientes desea añadir? "))
        for x in range (num_cliente): 
            cliente_data_lst=[] 
            qr_cliente= "insert into cliente (nombre, apellido1, apellido2, ciudad, categoría) values (%s, %s, %s, %s, %s)" 
            print() 
            print("DATOS DEL CLIENTE Nº" + str(x+1) + ": ") 
            cliente_data1=input("Ingrese 'nombre': ") 
            cliente_data2=input("Ingrese 'apellido1': ") 
            cliente_data3=input("Ingrese 'apellido2': ") 
            cliente_data4=input("Ingrese 'ciudad': ") 
            cliente_data5=int(input("Ingrese 'categoría': ")) 
            cliente_data_lst.append(cliente_data1) 
            cliente_data_lst.append(cliente_data2) 
            cliente_data_lst.append(cliente_data3) 
            cliente_data_lst.append(cliente_data4) 
            cliente_data_lst.append(cliente_data5) 
            cursor.execute(qr_cliente, cliente_data_lst)
            mydb.commit() 
    if tabla =="comercial":
        num_comercial = int(input(" >>>¿Cuántos comerciales desea añadir? "))
        for y in range(num_comercial):
            comercial_data_lst = []
            qr_comercial = "insert into comercial (nombre, apellido1, apellido2, comisión) values (%s, %s, %s, %s)"
            print()
            print("DATOS DEL COMERCIAL Nº" + str(y + 1) + ": ")
            comercial_data1 = input("Ingrese 'nombre': ")
            comercial_data2 = input("Ingrese 'apellido1': ")
            comercial_data3 = input("Ingrese 'apellido2': ")
            comercial_data4 = float(input("Ingrese 'comisión': "))
            comercial_data_lst.append(comercial_data1)
            comercial_data_lst.append(comercial_data2)
            comercial_data_lst.append(comercial_data3)
            comercial_data_lst.append(comercial_data4)
            cursor.execute(qr_comercial, comercial_data_lst)
            mydb.commit()
    if tabla == "pedido":
        num_pedido = int(input(" >>>¿Cuántos pedidos desea añadir? "))
        for z in range(num_pedido):
            pedido_data_lst = []
            qr_pedido = "insert into cliente (total, fecha, id_cliente, id_comercial) values (%s, %s, %s, %s)"
            print()
            print("DATOS DEL PEDIDO Nº" + str(x + 1) + ": ")
            pedido_data1 = input("Ingrese 'total': ")
            pedido_data2 = input("Ingrese 'fecha' (xxxx, x, xx): ")
            pedido_data3 = input("Ingrese 'id_cliente': ")
            pedido_data4 = input("Ingrese 'id_comercial': ")
            pedido_data_lst.append(pedido_data1)
            pedido_data_lst.append(pedido_data2)
            pedido_data_lst.append(pedido_data3)
            pedido_data_lst.append(pedido_data4)
            cursor.execute(qr_pedido, pedido_data_lst)
            mydb.commit()
if CRUD=="R":
    tabla = input(" >>>¿De qué tabla quiere leer los datos? (teclee: cliente / comercial / pedido) ")
    if tabla=="cliente":
        qr1 = "select * from cliente"
        cursor.execute(qr1)
        print()
        print(" - VALORES DE LA TABLA 'cliente': ")
        level = 3
        print(" " * level, cursor.fetchall())
        print()
    if tabla=="comercial":
        qr2 = "select * from comercial"
        cursor.execute(qr2)
        print()
        print(" - VALORES DE LA TABLA 'comercial': ")
        level = 3
        print(" " * level, cursor.fetchall())
        print()
    if tabla=="pedido":
        qr3 = "select * from pedido"
        cursor.execute(qr3)
        print()
        print(" - VALORES DE LA TABLA 'pedido': ")
        level = 3
        print(" " * level, cursor.fetchall())
        print()
if CRUD=="U":
