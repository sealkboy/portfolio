if CRUD=="D":
    tabla = input("¿De qué tabla quiere eleminar datos? (teclee: cliente / comercial / pedido) ")
    if tabla=="cliente":
            print()
            print()
            print("DATOS DE LA TABLA 'cliente' (id, nombre, apellido1, apeliido2, ciudad, categoría): ")
            print()
            qr_show_cliente = "select * from cliente"
            cursor.execute(qr_show_cliente)
            level=3
            print(" " * level, cursor.fetchall())
            columna_cliente = input("¿De qué columna quiere eliminar datos? (teclee: nombre / apellido1 / apellido2 / ciudad / categoría) ")
            print ("¡ATENCIÓN! se eliminarán todas la filas que contengan el valor que usted introduzca")
            if columna_cliente== "nombre":
                print ("¡ATENCIÓN! se eliminarán todas la filas que contengan el valor que usted introduzca")
                cliente_data_lst_nom_delete=[] 
                qr_cliente_nombre_delete1 = "SET SQL_SAFE_UPDATES = 0"
                qr_cliente_nombre_delete2 = "SET FOREIGN_KEY_CHECKS=0"
                qr_cliente_nombre_delete3 = "delete from cliente where nombre=%s"
                qr_cliente_nombre_delete4 = "SET FOREIGN_KEY_CHECKS=1"
                qr_cliente_nombre_delete5 = "SET SQL_SAFE_UPDATES = 1"
                print() 
                print("DATOS DEL CLIENTE: ") 
                cliente_data0=input("Ingrese 'nombre': ") 
                cliente_data_lst_nom_delete.append(cliente_data0) 
                cursor.execute(qr_cliente_nombre_delete1)
                cursor.execute (qr_cliente_nombre_delete2) 
                cursor.execute (qr_cliente_nombre_delete3, cliente_data_lst_nom_delete)
                cursor.execute (qr_cliente_nombre_delete4) 
                cursor.execute (qr_cliente_nombre_delete5)
                mydb.commit()
